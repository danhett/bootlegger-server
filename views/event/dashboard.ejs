<div ng-app="dashboardApp" ng-controller="dashboard" ng-cloak>
<div class="page-header">
<h1>My Dashboard <i class="fa fa-spin fa-spinner" ng-show="loading"></i></h1>
</div>


<div ng-repeat="event in events">
	<div class="col-sm-6">
	<div style="border-radius:3px;margin:auto auto; margin-bottom:10px;overflow:hidden;box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.75);">
	<div style="position:relative;background:url(/images/event_back.png);background-size:cover;width:100%;height:86px;">
          <img ng-show="event.iconbackground!=''" ng-src="{{event.iconbackground}}" style="position:absolute;width:100%;height:100%;top:0;left:0;"/>
          <div style="background:rgba(0,0,0,0.3);position:absolute;width:100%;height:100%;top:0;left:0;"></div>
        <img ng-show="event.icon" ng-src="{{event.icon}}" style="position:absolute;left:15px;top:15px;width:60px;height:60px;display:inline-block;margin-right:5px;"/>
        <div ng-show="!event.icon" style="position:absolute;width:60px;height:60px;padding-top:14px;left:18px;top:10px;display:inline-block;float:left;margin-right:5px;color:white;"><i class="fa fa-calendar-o fa-3x"></i></div>
        
        <div class="badge" style="position:absolute;right:0;top:0;">{{event.starts}} to {{event.ends}}</div>
        <div style="overflow:hidden;height:100%;margin-right:10px;">
      <div style="position:absolute;color:white;font-size:14pt;left:85px;top:16px;">
      {{event.name}}  
      </div>
        <div style="position:absolute;color:white;font-size:10pt;left:85px;top:38px;max-height:40px;text-overflow: ellipsis;overflow:hidden;padding-right:10px;">
      {{event.description}}  
      </div>
      </div>
    </div>
    <div class="text-center">  
    <a class="btn btn-link" href="/commission/{{event.id}}">Commission</a>
    <a class="btn btn-link" href="/event/view/{{event.id}}">Settings</a>
    <a class="btn btn-link" href="/shoot/{{event.id}}">View</a>
    <a class="btn btn-link" href="/post/{{event.id}}">Export</a>
    </div>
	</div>
  
  </div>
</div>

<div ng-hide="events.length>0" class="text-muted text-center">
  <h2>It looks like you're new to Bootlegger.<br>Start capturing footage by creating a new shoot.</h2>
  <br>
  <a href="/commission/new" class="btn btn-lg btn-success">Start a Shoot Now</a>
</div>


</div>