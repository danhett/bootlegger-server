<div ng-app="watchApp" ng-controller="list">
  <div style="position:absolute;width:100%;height:100%;z-index:100;background:rgba(255,255,255,0.6);" class="text-center" ng-show="loading">
		<i class="fa fa-spinner fa-4x fa-spin" style="margin-top:10%;"></i>
	</div>

<div class="page-header">
  <h1>My Micro-Edits</h1>
</div>

<div class="text-center">
  <h2 class="text-muted" ng-show="edits.length==0">Watch videos from a shoot to create your first mico-edit</h2>

<a href="/v/{{edit.shortlink}}" ng-repeat="edit in edits | limitTo:10">
  <div class="panel panel-default" style="margin-bottom:10px;position:relative;width:200px;height:120px;overflow:hidden;display:inline-block;margin-right:10px;background:#333">

    <img ng-src="{{edit.media[0].thumb}}" style="width:100%;"/>
<span style="position:absolute;bottom:0;right:5px;margin:auto auto;width:auto;"><h4 style="color:white;text-shadow: 0px 0px 10px #000;">{{edit.title}}</h4></span>

<span style="position:absolute;top:0;left:0px;width:100%;height:100%;" ng-show="edit.failed"><i class="fa fa-exclamation-triangle fa-3x" style="color:silver;padding-top:20%;"></i></span>
<span style="position:absolute;top:0;left:0px;width:100%;height:100%;" ng-show="!edit.path && !edit.failed"><i class="fa fa-clock-o fa-3x" style="color:silver;padding-top:20%;"></i></span>
</div>
</a>
</div>
<div class="clearfix"></div>

<div class="page-header">
  <h1>Shoots I have Contributed To</h1>
</div>
<div class="text-center">
  <h2 class="text-muted" ng-show="shoots.length==0">When you participate in a shoot, you will see it here...</h2>

  <a href="/watch/view/{{shoot.id}}" ng-repeat="shoot in shoots">
<div  class="panel panel-default" style="margin-bottom:10px;position:relative;width:300px;height:200px;overflow:hidden;display:inline-block;margin-right:10px;background:#333">


  <div ng-repeat="media in shoot.media" style="float:left;width:25%;">
    <img ng-src="<%- sails.config.S3_CLOUD_URL %>{{media.thumb}}" style="width:100%;min-height:42px"/>
  </div>

<span style="position:absolute;bottom:0;right:5px;margin:auto auto;width:auto;"><h3 style="color:white;text-shadow: 0px 0px 10px #000;">{{shoot.name}}</h3></span>

</div>
</a>
</div>
</div>
